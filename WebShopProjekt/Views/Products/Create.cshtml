<h4>Dodaj novi proizvod</h4>


<form action="/Products/Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label">Ime:</label>
        <input class="form-control" type="text" name="Name" />
    </div>
    <div class="form-group">
        <label class="control-label">Opis:</label>
        <input class="form-control" type="text" name="Description" />
    </div>
    <div class="form-group">
        <label class="control-label">Cijena:</label>
        <input class="form-control" type="number" name="Price" />
    </div>
    <div class="form-group">
        <label class="control-label">Na popustu:</label>
        <input class="form-check-input" type="checkbox" name="IsDiscount" value="true" />
        <input class="form-check-input" type="hidden" name="IsDiscount" value="false" />
    </div>
    <div class="form-group">
        <label class="control-label">Hot:</label>
        <input class="form-check-input" type="checkbox" name="isHot" value="true"/>
        <input class="form-check-input" type="hidden" name="isHot" value="false" />
    </div>
    <div class="form-group">
        <label class="control-label">Cijena na popustu:</label>
        <input class="form-control" type="number" name="DiscountPrice" />
    </div>
    <div class="form-group">
        <label class="control-label">Kategorije</label>
        <select name="categoryId" class="form-select">
            @foreach(var category in ViewBag.Categories as List<Category>)
            {
            <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Odaberite slike:</label>
        <input class="btn btn-group" type="file" name="images" multiple />
    </div>
    <input class="btn btn-dark" type="submit" value="Dodaj" />
</form>