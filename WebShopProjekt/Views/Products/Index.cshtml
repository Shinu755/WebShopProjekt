@model List<Product>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<h4>Svi proizvodi</h4>
<table class="table">
    <tr>
        <th>Naziv</th>
        <th>Opis</th>
        <th>Cijena</th>
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td>
                <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
            </td>
        </tr>
        <tr height="150">
            <td>
                @foreach (var image in product.images)
                {
                    <img src="/images/@image.ImagePath" width="80" height="80" />
                }
            </td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    }
</table>
<a class="btn btn-dark" href="/Products/Create">Dodaj novi proizvod</a>